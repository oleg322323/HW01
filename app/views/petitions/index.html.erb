<h1><%= @petitions[:header] %></h1>

<div id="petitions">
  <table>
    <tr>
      <th>Петиция</th>
      <% unless (2 .. 3) === @petitions[:type] %>
        <th>Автор</th>
      <% end %>
      <th>Голоса</th>
      <th>Дата создания</th>
      <% if @petitions[:type] == 2 %>
          <th colspan="2">Действия</th>
      <% end %>
    </tr>
    <% @petitions[:list].reverse.each do |petition| %>
        <tr>
          <td><%= link_to petition.title, petition %></td>
          <% unless (2 .. 3) === @petitions[:type] %>
            <td>
              <%= petition.user.first_name %>
              <%= petition.user.last_name %>
            </td>
          <% end %>
          <td><%= petition.votes.count %></td>
          <td><%= petition.created_at.strftime('%d/%m/%Y %k:%M') %></td>
          <% if @petitions[:type] == 2 %>
              <td><%= link_to "Изменить", edit_petition_path(petition) %></td>
              <td><%= link_to "Удалить", petition, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
          <% end %>
        </tr>
    <% end %>
  </table>
</div>
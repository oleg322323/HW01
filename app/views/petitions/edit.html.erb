<h3 class="text-muted">Изменение петиции</h3>

<%= form_for @petition do |f| %>
    <% if @petition.errors.any? %>
        <div class="error_messages">
          <h2>Петиция не создана!</h2>
          <ul>
            <% @petition.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "Название" %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label "Описание" %><br />
      <%= f.text_area :text, size: "80x18" %>
    </div>
    <div class="actions"><%= f.submit "Обновить", class: 'btn btn-success' %></div>
<% end %>
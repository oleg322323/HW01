<!DOCTYPE html>
<html>
<head>
  <title>Petitions</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="container">
  <div id="user_header">
    <% if current_user %>
        <%= current_user.email %>&nbsp;
        (<%= link_to 'Выйти', logout_path %>)
    <% else %>
        <%= link_to 'Зарегистрироваться', signup_path %> |
        <%= link_to 'Войти', login_path %>
    <% end %>
  </div>

  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
  <% end %>

  <div id="header">
    <h2><%= link_to 'Онлайн петиции нашего района', root_path %></h2>
  </div>

  <div id="petition_header">
    <%= link_to "Все петиции", petitions_path( count: "all" ) %><br />
    <% if current_user %>
        <%= link_to "Создать петицию", new_petition_path %><br />
        <%= link_to "Мои петиции", petitions_path( user: current_user ) %>
    <% else %>
        <%= link_to "Создать петицию", login_path %>
    <% end %>
  </div>

  <%= yield %>
  <br><br><br>
  <div id="copyright">
    <p>&copy;Gubskiy Oleg, RubyBursa'05, 2016</p>
  </div>
</div>
</body>
</html>